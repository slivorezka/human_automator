{
  "manifest_version": 3,
  "name": "Human Automator",
  "version": "3.0.0",
  "description": "An unofficial app for automatization human.ua service",
  "action": {
    "default_icon": {
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/16.png",
    "128": "icons/16.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
